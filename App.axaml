<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaNotePad.App"
             xmlns:local="using:AvaloniaNotePad"
             xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  
    <Application.Styles>
        <FluentTheme />
        
        <!-- Custom styles for notepad -->
        <Style Selector="Button.close-tab">
            <Setter Property="MinWidth" Value="16" />
            <Setter Property="MinHeight" Value="16" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="FontSize" Value="10" />
        </Style>
        
        <Style Selector="Button.close-tab:pointerover">
            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
        </Style>
        
        <!-- Tab styling to match Windows 11 Notepad -->
        <Style Selector="TabItem">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontSize" Value="13" />
        </Style>
        
        <!-- TextEditor styling -->
        <Style Selector="avaloniaEdit|TextEditor">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
        </Style>
    </Application.Styles>
</Application>
