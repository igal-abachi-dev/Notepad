<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="NotepadAvalonia.Views.FontDialog"
        Width="380"
        Height="260"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Font"
        mc:Ignorable="d"
        x:CompileBindings="False">
  <StackPanel Margin="12" Spacing="10">
    <StackPanel>
      <TextBlock Text="_Font:"/>
      <ComboBox x:Name="FontComboBox"
                ItemsSource="{Binding FontFamilies}"
                SelectedItem="{Binding FontFamily}"
                MinWidth="240" />
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="12">
      <StackPanel>
        <TextBlock Text="_Size:"/>
        <NumericUpDown Minimum="6" Maximum="72"
                       Value="{Binding FontSize}"
                       Width="100" />
      </StackPanel>
      <StackPanel>
        <CheckBox Content="_Bold" IsChecked="{Binding IsBold}" />
        <CheckBox Content="_Italic" IsChecked="{Binding IsItalic}" />
      </StackPanel>
    </StackPanel>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,10,0,0">
      <Button Content="OK" MinWidth="80" Click="OnOk"/>
      <Button Content="Cancel" MinWidth="80" Click="OnCancel"/>
    </StackPanel>
  </StackPanel>
</Window>
