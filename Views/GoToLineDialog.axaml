<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NotepadAvalonia.Views.GoToLineDialog"
        Width="320"
        Height="170"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Go To Line"
        x:CompileBindings="False">
  <StackPanel Margin="12" Spacing="10">
    <TextBlock x:Name="InfoText"
               Text="{Binding MaxLine, StringFormat=Line number (1 - {0})}" />
    <TextBox x:Name="LineNumberTextBox"
             Watermark="Enter line number" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,6,0,0">
      <Button Content="_Go To" Click="OnGoTo" MinWidth="80" />
      <Button Content="Cancel" Click="OnCancel" MinWidth="80" />
    </StackPanel>
  </StackPanel>
</Window>
